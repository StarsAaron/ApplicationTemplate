<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volley"
        android:id="@+id/btn_volley"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引导页面"
        android:id="@+id/btn_guide" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件浏览器"
        android:id="@+id/btn_filechoose" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DiyButton"
        android:id="@+id/btn_diybutton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RecyclerView"
        android:id="@+id/btn_listview" />

    <Button
        android:id="@+id/btn_nicedialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NiceDialog"/>

    <com.aaron.view.CustomEditText
        android:id="@+id/customEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        app:delete_height="80"
        app:delete_width="80"
        app:delete_x="8"

        app:delete_y="0"
        app:ic_delete="@drawable/delete"
        app:ic_left_click="@drawable/ic_left_click"
        app:ic_left_unclick="@drawable/ic_left_unclick"
        app:left_height="60"
        app:left_width="60"
        app:left_x="0"
        app:left_y="0"
        app:linePosition="1">

    </com.aaron.view.CustomEditText>

